<% name = current_user.present? ? current_user.username : 'New User' %>
<div class='mx-auto mb-5' style="width: 150px;">
<span class="badge rounded-pill bg-info text-dark">Welcome, <%= name %></span>
</div>

<div class='container'>
<h1>Articles</h1>

<ul>
<% @articles.each do |article| %>
<li>
<%= link_to article.title, article %>
</li>
<% end %>
</ul>

<%= link_to "New Article", new_article_path %>

</div>